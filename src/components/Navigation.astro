---
const navItems = [
  { label: "O nama", href: "#about" },
  { label: "Usluge", href: "#services" },
  { label: "Iskustva", href: "#reviews" },
  { label: "Pitanja i odgovori", href: "#faq" },
  { label: "Kontakt", href: "#contact" },
];
---

<header class="sticky top-0 z-50 bg-white border-b border-gray-200">
  <nav class="max-w-5xl mx-auto px-6">
    <div class="h-16 flex items-center justify-between">
      <!-- Logo / Name -->
      <a href="#" class="text-lg font-semibold text-gray-900">
        Electro Blagi
      </a>

      <!-- Desktop nav -->
      <ul class="hidden md:flex gap-6 text-sm font-medium">
        {
          navItems.map((item) => (
            <li>
              <a
                href={item.href}
                class="text-gray-700 hover:text-gray-900 transition">
                {item.label}
              </a>
            </li>
          ))
        }
      </ul>

      <!-- Hamburger button -->
      <button
        id="menu-button"
        class="md:hidden inline-flex items-center justify-center p-2 rounded-md text-gray-700 hover:bg-gray-100"
        aria-label="Otvori izbornik"
        aria-expanded="false">
        <!-- Hamburger icon -->
        <svg
          class="h-6 w-6"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          viewBox="0 0 24 24">
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>

    <!-- Mobile menu -->
    <div
      id="mobile-menu"
      class="hidden md:hidden border-t border-gray-200 pb-4">
      <ul class="flex flex-col gap-4 pt-4 text-sm font-medium">
        {
          navItems.map((item) => (
            <li>
              <a
                href={item.href}
                class="block text-gray-700 hover:text-gray-900">
                {item.label}
              </a>
            </li>
          ))
        }
      </ul>
    </div>
  </nav>
</header>

<script>
  const button = document.getElementById("menu-button");
  const menu = document.getElementById("mobile-menu");

  button?.addEventListener("click", () => {
    const isOpen = !menu?.classList.contains("hidden");
    menu?.classList.toggle("hidden");
    button.setAttribute("aria-expanded", String(!isOpen));
  });

  // Close menu when a link is clicked
  menu?.querySelectorAll("a").forEach((link) => {
    link.addEventListener("click", () => {
      menu.classList.add("hidden");
      button?.setAttribute("aria-expanded", "false");
    });
  });
</script>
